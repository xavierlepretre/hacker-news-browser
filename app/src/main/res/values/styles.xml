<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light">

    <item name="colorPrimary">@color/hacker_news_orange</item>
    <item name="colorPrimaryDark">@color/hacker_news_orange_dark</item>
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:textColorSecondary">@android:color/darker_gray</item>
    <item name="android:windowBackground">@android:color/white</item>

    <item name="android:textColor">@android:color/black</item>

  </style>

  <style name="AppTheme" parent="AppTheme.Base"/>

  <style name="AppTheme.ListItem.Base" parent="AppTheme">
    <item name="android:paddingTop">@dimen/item_horizontal_padding</item>
    <item name="android:paddingBottom">@dimen/item_horizontal_padding</item>
    <item name="android:paddingLeft">@dimen/item_horizontal_padding</item>
    <item name="android:paddingRight">@dimen/item_horizontal_padding</item>
  </style>

  <style name="AppTheme.ListItem" parent="AppTheme.ListItem.Base"/>

</resources>
