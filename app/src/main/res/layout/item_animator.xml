<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:shownIn="@layout/activity_view_item"
    >

  <com.xavierlepretre.hackernewsbrowser.ItemViewAnimator
      android:id="@android:id/extractArea"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <include
        android:id="@android:id/progress"
        layout="@layout/loading_item"
        tools:ignore="DuplicateIncludedIds"/>

    <include
        android:id="@+id/story"
        layout="@layout/story_header"
        tools:ignore="DuplicateIncludedIds"/>

    <include
        android:id="@+id/job"
        layout="@layout/job_header"
        tools:ignore="DuplicateIncludedIds"/>

  </com.xavierlepretre.hackernewsbrowser.ItemViewAnimator>

</FrameLayout>